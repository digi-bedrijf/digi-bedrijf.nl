---
import Head from '../components/head.component.astro'
import Header from '../components/header.component.astro'
import Footer from '../components/footer.component.astro'

import '../styles/main.scss'

const { title } = Astro.props
---

<html lang="en">
  <Head title={title} />
  <body>
    <Header />
    <main>
      <div class="page">
        <!-- page content slot -->
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>
